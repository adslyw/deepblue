.wrapper
  .form-signup
    %h4.form-header 请填写注册信息
    = form_for resource, as: resource_name, url: registration_path(resource_name) do |f|\
      = devise_error_messages!
      .form-group
        = f.email_field :email, class: "form-control", placeholder: "请输入注册邮箱地址", required: "required"
      .row
        .col-xs-12.col-sm-6.col-md-6
          .form-group
            = f.password_field :password, class: "form-control", placeholder: "请设置登录密码", autocomplete: 'off', required: "required"
        .col-xs-12.col-sm-6.col-md-6
          .form-group
            = f.password_field :password_comfirmation, class: "form-control", placeholder: "请确认登录密码", autocomplete: "off", required: "required"
      = link_to "返回登录", '/', class: "btn btn-warning"
      = f.submit "提交注册", class: "btn btn-success pull-right"
