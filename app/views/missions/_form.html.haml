= form_for @mission do |f|
  - if @mission.errors.any?
    #error_explanation
      %h2= "#{pluralize(@mission.errors.count, "error")} prohibited this mission from being saved:"
      %ul
        - @mission.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :sql
    = f.text_field :sql
  .field
    = f.label :params
    = f.text_field :params
  .field
    = f.label :sql_type
    = f.text_field :sql_type
  .field
    = f.label :multiple
    = f.check_box :multiple
  .actions
    = f.submit 'Save'
