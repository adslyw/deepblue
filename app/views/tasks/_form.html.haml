.section
  = form_for @task do |f|
    - if @task.errors.any?
      #error_explanation
        %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
        %ul
          - @task.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.label :mission_id
      = f.number_field :mission_id
    .field
      = f.label :status
      = f.number_field :status
    .field
      = f.label :params
      = f.text_area :params
    .actions
      = f.submit 'Save'
